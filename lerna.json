{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "4.1.0",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "*.md",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/__fixtures__/**",
        "**/__tests__/**"
      ]
    }
  }
}
