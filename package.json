{
  "name": "@jungvonmatt/contentful-ssg",
  "version": "0.9.2",
  "description": "Export contentful entries to files for static site generators (hugo/grow/...)",
  "main": "index.js",
  "bin": {
    "contentful-ssg": "index.js",
    "cssg": "index.js"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "jest": "jest --coverage",
    "test": "npm run lint && npm run jest"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^14.1.2",
    "@contentful/rich-text-types": "^14.1.2",
    "chalk": "^4.1.0",
    "commander": "^7.0.0",
    "contentful": "^8.1.7",
    "contentful-management": "^7.5.1",
    "cosmiconfig": "^7.0.0",
    "dlv": "^1.1.3",
    "dotenv": "^8.2.0",
    "find-up": "^5.0.0",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.2",
    "ignore": "^5.1.8",
    "inquirer": "^7.3.3",
    "js-yaml": "^4.0.0",
    "js-yaml-js-types": "^1.0.0",
    "listr": "^0.14.3",
    "listr-update-renderer": "^0.5.0",
    "merge-options": "^3.0.4",
    "pkg-up": "^3.1.0",
    "snake-case": "^3.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "extends": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "ecmaFeatures": {
        "ecmaVersion": 2017,
        "impliedStrict": true
      }
    },
    "env": {
      "node": true
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-path .gitignore",
      "eslint --fix --ignore-path .gitignore"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jungvonmatt/contentful-ssg.git"
  },
  "bugs": {
    "url": "https://github.com/jungvonmatt/contentful-ssg/issues"
  },
  "homepage": "https://github.com/jungvonmatt/contentful-ssg#readme"
}
