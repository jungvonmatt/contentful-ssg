{
  "name": "@jungvonmatt/contentful-ssg-project",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo for all NPM packages related to contentful-ssg",
  "author": "Jung von Matt TECH GmbH",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jungvonmatt/contentful-ssg"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "lerna run clean",
    "commit": "cz",
    "prepublishOnly": "pnpm run test:ci",
    "release": "lerna version --no-private --conventional-commits --create-release github --yes && lerna publish from-git --yes",
    "compile": "turbo run compile",
    "start": "lerna run start",
    "lint": "turbo run lint",
    "test": "turbo run test --concurrency=1",
    "test:ci": "turbo run lint && jest",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/{src,test}/**/*.ts": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "check-dependency-version-consistency": "catalog:",
    "eslint-config-xo-typescript": "catalog:",
    "eslint-plugin-prettier": "^5.2.6",
    "git-cz": "catalog:",
    "husky": "catalog:",
    "jest": "catalog:",
    "jest-esm-transformer": "catalog:",
    "jest-sonar": "catalog:",
    "jest-sonar-reporter": "catalog:",
    "lerna": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "^3.5.3",
    "supertest": "catalog:",
    "ts-jest": "^29.3.2",
    "ts-node": "catalog:",
    "turbo": "catalog:",
    "typescript": "^5.8.3"
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"pnpm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "tar": "catalog:"
  }
}
