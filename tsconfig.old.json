{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "es2020", "esnext"],
    "target": "ESNext",
    "module": "node12",
    "sourceMap": false,
    "declaration": true,
    "allowJs": true,
    "importHelpers": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "isolatedModules": true
  },
  "references": [
    {
      "path": "./packages/contentful-ssg/tsconfig.ref.json"
    },
    {
      "path": "./packages/cssg-plugin-grow/tsconfig.ref.json"
    },
  ],
}
